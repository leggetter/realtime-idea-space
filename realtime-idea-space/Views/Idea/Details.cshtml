@model realtime_idea_space.Models.IdeaModel
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Html.ActionLink("Ideas", "Index")
    <span> &gt; </span>
    @Html.DisplayFor(model => model.Title)
    @if (User.Identity.GetUserId() == Model.CreatedByUserId)
    {
        <small>
            (
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
            )
        </small>
    }
</h2>

<hr />

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>

<hr />

@{Html.RenderAction("CreateComment", new { IdeaModelId = Model.Id, CommentByUserId = User.Identity.GetUserId() });}

<hr />

<div>
    <dl class="dl-horizontal">

        <dt>
            Comments (@Model.Comments.Count)
        </dt>
        <dd id="comments">
            @foreach (var comment in Model.Comments.OrderByDescending(c => c.Created).ToList())
            {
                <div class="idea-comment">
                    <span>@comment.Created</span>
                    <p>
                        @comment.Text
                    </p>
                </div>
            }
        </dd>
    </dl>

</div> 

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var commentHub = $.connection.commentHub;

            // Create a function that the hub can call back to display comments.
            commentHub.client.addNewComment = function(comment) {
                var commentEl =   $('<div class="idea-comment">' +
                                        '<span>' + comment.Created + '</span>' +
                                        '<p>' + comment.Text + '</p>' +
                                    '</div>').hide();
                $('#comments').prepend(commentEl);
                commentEl.slideDown();
            };

            // Start the connection.
            $.connection.hub.start().done(function () {
                console.log('hub started')
            });
        });
    </script>
}