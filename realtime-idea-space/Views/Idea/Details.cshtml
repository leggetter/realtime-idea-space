@model realtime_idea_space.Models.IdeaModel
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Html.ActionLink("Ideas", "Index")
    <span> &gt; </span>
    @Html.DisplayFor(model => model.Title)
    @if (User.Identity.GetUserId() == Model.CreatedByUserId)
    {
        <small>
            (
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
            )
        </small>
    }
</h2>

<hr />

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>

<hr />

@{Html.RenderAction("CreateComment", new { IdeaModelId = Model.Id, CommentByUserId = User.Identity.GetUserId() });}

<hr />

<div>
    <dl class="dl-horizontal">

        <dt>
            Comments (@Model.Comments.Count)
        </dt>
        <dd id="comments">
            @foreach (var comment in Model.Comments.OrderByDescending(c => c.Created).ToList())
            {
                <div class="idea-comment">
                    <span>@comment.Created</span>
                    <p>
                        @comment.Text
                    </p>
                </div>
            }
        </dd>
    </dl>

</div> 

