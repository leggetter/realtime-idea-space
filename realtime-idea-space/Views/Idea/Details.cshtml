    <script src="https://cdn.pubnub.com/pubnub-3.14.5.js"></script>
    <script>
        var pubnub = PUBNUB({
            subscribe_key: @Config.PubNubSubscribeKey
        });
        pubnub.subscribe({
            channel: "@Model.Id.ToString()",
            callback: function (comment) {
                var commentEl = $('<div class="idea-comment">' +
                            '<span>' + comment.Created + '</span>' +
                            '<p>' + comment.Text + '</p>' +
                        '</div>').hide();
                $('#comments').prepend(commentEl);
                commentEl.slideDown();
            }
        });
    </script>

